{
  "compilerOptions": {
    "target": "es2022",                               // Ustawia docelową wersję ECMAScript
    "module": "NodeNext",                             // Określa system modułów (np. dla Node.js)
    "moduleResolution": "NodeNext",                   // Określa sposób rozwiązywania modułów
    "esModuleInterop": true,                          // Umożliwia importowanie modułów CommonJS
    "skipLibCheck": true,                             // Pomija sprawdzanie typów w plikach deklaracji
    "strict": true,                                   // Włącza wszystkie opcje ścisłego sprawdzania typów
    "noUncheckedIndexedAccess": true,                 // Zapobiega dostępowi do niezdefiniowanych elementów tablicy
    "noImplicitOverride": true,                       // Wymaga użycia słowa kluczowego 'override' przy nadpisywaniu metod
    "resolveJsonModule": true,                        // Umożliwia importowanie plików JSON
    "rootDir": "./load-tests",                        // Określa katalog źródłowy
    "outDir": "./dist",                               // Określa katalog wyjściowy dla skompilowanych plików
    "declaration": true,                              // Generuje pliki deklaracji (.d.ts)
    "declarationMap": true,                           // Generuje mapy źródeł dla plików deklaracji
    "sourceMap": true,                                // Generuje mapy źródeł dla skompilowanych plików
    "incremental": true,                              // Włącza inkrementalną kompilację
    "composite": true,                                // Umożliwia korzystanie z referencji projektów
    "skipDefaultLibCheck": true,                      // Pomija sprawdzanie domyślnych plików deklaracji
    "forceConsistentCasingInFileNames": true          // Wymusza spójność wielkości liter w nazwach plików
  },
  "include": ["load-tests/**/*.ts"],                  // Określa pliki do uwzględnienia w kompilacji
  "exclude": ["node_modules", "dist"]                 // Określa pliki i katalogi do wykluczenia z kompilacji
}
